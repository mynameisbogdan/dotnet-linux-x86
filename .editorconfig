; http://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

[*.md]
trim_trailing_whitespace = false

[*.{js,json,yaml,yml}]
indent_size = 2
